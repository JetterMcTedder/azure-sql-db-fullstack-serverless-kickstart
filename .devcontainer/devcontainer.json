{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
  },
  "remoteUser": "vscode",
  "postCreateCommand": "dotnet tool update --global Microsoft.DataApiBuilder",
  "postCreateCommand": "dotnet tool install -g microsoft.sqlpackage",
  "postCreateCommand": "curl https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > microsoft.gpg",    
  "postCreateCommand": "sudo mv microsoft.gpg /etc/apt/trusted.gpg.d/microsoft.gpg",
  "postCreateCommand": "sudo sh -c 'echo \"deb [arch=amd64] https://packages.microsoft.com/repos/microsoft-ubuntu-$(lsb_release -cs)-prod $(lsb_release -cs) main\" > /etc/apt/sources.list.d/dotnetdev.list' ",
  "postCreateCommand": "sudo apt-get update",
  "postCreateCommand": "sudo apt-get install azure-functions-core-tools-4 "      
}
